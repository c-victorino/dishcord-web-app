<section class="vh-100">
  <div class="container h-100 d-flex justify-content-center align-items-center">
    <div class="row justify-content-center">
      <div class="col-sm-11 col-md-7 col-lg-6">
        <div class="card shadow">
          <h5 class="card-header bg-secondary text-white">New Category</h5>
          <div class="card-body">
            <h5 class="card-title">Cook Up New Categories</h5>
            <p class="card-text">Be the master of your food domain. Add custom
              categories that match your culinary passions.</p>

            <form method="post" action="/categories/add">
              <div class="mb-2">
                <label for="category" class="mb-2">Category:</label>
                <input
                  class="form-control border border-dark bg-white"
                  id="category"
                  name="category"
                  type="text"
                  placeholder="enter name"
                  required
                />
              </div>
              <div class="d-grid">
                <button
                  type="submit"
                  class="btn btn-primary"
                  value="Add Category"
                >Add
                </button>
              </div>

            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>