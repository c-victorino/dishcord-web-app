<section class="mt-8">
  <div class="container pb-6 d-flex justify-content-center align-items-center">
    <div class="row w-100 justify-content-center">
      <div class="col col-md-9">

        <div class="d-flex align-items-center mx-auto mb-3 gap-2">
          <h4 class="m-0">Options:</h4>
          <div>
            <a href="/posts/add" class="btn btn-primary m-1">
              Add |
              <i class="fas fa-plus"></i></a>
            <button
              class="btn btn-secondary m-1 text-white"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#other"
              aria-expanded="false"
              aria-controls="collapseExample"
            >
              All
            </button>
          </div>
        </div>

        <div class="border border-secondary shadow-sm">
          <table class="table table-hover table-striped m-0">
            <thead class="table-secondary">
              <tr class="text-center fs-5">
                <th scope="col">Post ID</th>
                <th scope="col">Title</th>
                <th scope="col">Category</th>
                <th scope="col">Published</th>
                <th scope="col">Post Date</th>
                <th scope="col">Modified</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>

            <tbody class="text-center">
              {{! User Posts }}
              {{#each posts}}
                {{#if userOrigin}}
                  <tr class="text-center align-middle">

                    <th scope="row">{{id}}</th>
                    <td>{{title}}</td>
                    <td>
                      <a
                        href="/posts?category={{category}}"
                        class="btn text-dark"
                      >{{category}}</a>
                    </td>
                    <td>{{published}}</td>
                    <td>{{#formatDate postDate}}{{/formatDate}}</td>
                    <td>{{#if lastUpdate}}
                        {{#formatDate lastUpdate}}{{/formatDate}}
                      {{else}}
                        Original{{/if}}</td>
                    <td>
                      <a class="btn btn-danger" href="posts/edit/{{id}}">
                        <i class="fa-solid fa-pen"></i>
                      </a>
                    </td>
                    <td class="align-middle">
                      <a href="posts/delete/{{id}}" class="btn btn-danger">
                        <i class="fas fa-circle-xmark"></i>
                      </a>
                    </td>
                  </tr>
                {{/if}}
              {{/each}}

              {{! Not User Made Posts }}
              {{#each posts}}
                {{#unless userOrigin}}
                  <tr class="collapse text-center align-middle" id="other">
                    <th scope="row">{{id}}</th>
                    <td>{{title}}</td>
                    <td>
                      <a
                        href="/posts?category={{category}}"
                        class="btn text-dark"
                      >{{category}}</a>
                    </td>
                    <td>{{published}}</td>
                    <td>{{#formatDate postDate}}{{/formatDate}}</td>
                    <td>{{#if lastUpdate}} {{lastUpdate}} {{else}}
                        Original{{/if}}</td>
                    <td>
                      <a class="btn btn-danger disabled" href="#">
                        <i class="fa-solid fa-pen"></i>
                      </a>
                    </td>
                    <td class="align-middle">
                      <a href="#" class="btn btn-danger disabled">
                        <i class="fas fa-circle-xmark"></i>
                      </a>
                    </td>
                  </tr>
                {{/unless}}
              {{/each}}

            </tbody>

          </table>
          {{#unless posts}}
            <div class="text-center p-3">
              <strong>No Result Found</strong>
            </div>
          {{/unless}}
        </div>
      </div>
    </div>
  </div>
</section>